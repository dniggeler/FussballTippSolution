@model List<WMTippApp.Models.RankingInfoModel>

@{
    ViewBag.Title = "Punktestand";
}

<h2>Rangliste</h2>

 <table class="MatchLister">
    <tr>
        <th>Rang</th>
        <th>Name</th>
        <th>#Tipps</th>
        <th>Avg</th>
        @*<th>Avg (clean)</th>*@
        <th>Total</th>
        @*<th>Total (clean)</th>*@
    </tr>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.Rang</td>
            <td>@m.DisplayName</td>
            <td>@m.TippCount</td>
            <td>@String.Format("{0:0.00}", m.PointAvg)</td>
            <td>@*@String.Format("{0:0.00}", m.PointAvgClean)*@</td>   
            <td>@String.Format("{0:0.00}", m.TotalPoints)</td>
            <td>@*@String.Format("{0:0.00}", m.TotalPointsClean)*@</td>
        </tr>
    }
</table>